# Environment variables for production deployment
# Copy this file to .env and fill in your values

# API Configuration
# For local development: http://localhost:8810/api
# For Portainer/remote deployment: http://YOUR_PROXMOX_IP:8810/api
# Replace YOUR_PROXMOX_IP with your actual Proxmox host IP
NEXT_PUBLIC_API_URL=http://localhost:8810/api

# Port Configuration
FRONTEND_PORT=3310
BACKEND_PORT=8810

# Backend Django settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.123
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3310,http://127.0.0.1:3310,http://192.168.1.123:3310,http://localhost,http://127.0.0.1

# Domain name (without http/https)
DOMAIN=localhost

# Django secret key (generate a new one for production)
SECRET_KEY=change-this-secret-key-in-production

# Database settings (if using PostgreSQL instead of SQLite)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=finance_tracker
# DB_USER=finance_user
# DB_PASSWORD=your_secure_password
# DB_HOST=db
# DB_PORT=5432

# Email settings (optional, for password reset)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
